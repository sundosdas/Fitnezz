@model gym.Models.Subscription

<div class="container my-5">
    <h1 class="text-center mb-4">Invoice</h1>

    <div class="card shadow">
        <div class="card-body">
            <h5 class="card-title">Invoice Details</h5>
            <table class="table">
                <tr>
                    <th>User Name:</th>
                    <td>@Model.User.FirstName @Model.User.LastName</td>
                </tr>
                <tr>
                    <th>Plan Name:</th>
                    <td>@Model.Plan.PlanName</td>
                </tr>
                <tr>
                    <th>Start Date:</th>
                    <td>@Model.StartDate.ToString("yyyy-MM-dd")</td>
                </tr>
                <tr>
                    <th>End Date:</th>
                    <td>@Model.EndDate.ToString("yyyy-MM-dd")</td>
                </tr>
                <tr>
                    <th>Total Price:</th>
                    <td>$@Model.Plan.Price</td>
                </tr>
            </table>
        </div>
        <div class="card-footer text-center">
            <a href="@ViewBag.InvoicePath" class="btn btn-primary" download>Download Invoice</a>
        </div>
    </div>
</div>
