@model IEnumerable<gym.Models.Subscription>
@{
    ViewData["Title"] = "Search Subscriptions";
    Layout = "~/Views/Shared/_AdminLayout .cshtml";

}

<div class="container mt-5">
    <!-- Search Form -->
    <form asp-action="Search" method="post">
        <div class="row">
            <div class="col-md-4">
                <label for="startDate">Start Date</label>
                <input type="date" class="form-control" id="startDate" name="startDate" />
            </div>
            <div class="col-md-4">
                <label for="endDate">End Date</label>
                <input type="date" class="form-control" id="endDate" name="endDate" />
            </div>
            <div class="col-md-4 align-self-end">
                <button type="submit" class="btn btn-dark mt-2">Search</button>
            </div>
        </div>
    </form>

    <!-- Results Table -->
    <div class="row mt-5">
        <div class="col-12">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Subscription ID</th>
                        <th>Member First Name</th>
                        <th>Member Last Name</th>
                        <th>Plan Name</th>
                        <th>Price</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var subscription in Model)
                        {
                            <tr>
                                <td>@subscription.SubscriptionId</td>
                                <td>@subscription.User.FirstName</td>
                                <td>@subscription.User.LastName</td>
                                <td>@subscription.Plan.PlanName</td>
                                <td>@subscription.Plan.Price.ToString("C")</td>
                                <td>@subscription.StartDate.ToShortDateString()</td>
                                <td>@subscription.EndDate.ToShortDateString()</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">No data available for the selected dates.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
