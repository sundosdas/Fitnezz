@model IEnumerable<gym.Models.Testimonial>

@{
    ViewData["Title"] = "Testimonials";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Create New Testimonial</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.TContent)</th>
                <th>@Html.DisplayNameFor(model => model.IsApproved)</th>
                <th>@Html.DisplayNameFor(model => model.SubmittedAt)</th>
                <th>@Html.DisplayNameFor(model => model.User)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.TContent)</td>
                    <td>@Html.DisplayFor(modelItem => item.IsApproved)</td>
                    <td>@Html.DisplayFor(modelItem => item.SubmittedAt)</td>
                    <td>@Html.DisplayFor(modelItem => item.User.UserId)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.TestimonialId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.TestimonialId" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.TestimonialId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
