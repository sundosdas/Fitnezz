@model Homepage

@{
    ViewData["Title"] = "Homepage Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Homepage</h4>
    <hr />
    <dl class="row">
        <!-- Slider Title 1 -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Slidertitle1)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Slidertitle1)
        </dd>

        <!-- Slider Subtitle 1 -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Slidersubtitle1)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Slidersubtitle1)
        </dd>

        <!-- Slider Image 1 -->
        <dt class="col-sm-2">
            Slider Image 1
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Sliderimage1" alt="Slider Image 1" style="max-width: 200px; height: auto;" />
        </dd>

        <!-- Slider Title 2 -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Slidertitle2)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Slidertitle2)
        </dd>

        <!-- Slider Subtitle 2 -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Slidersubtitle2)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Slidersubtitle2)
        </dd>

        <!-- Slider Image 2 -->
        <dt class="col-sm-2">
            Slider Image 2
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Sliderimage2" alt="Slider Image 2" style="max-width: 200px; height: auto;" />
        </dd>

        <!-- Last Updated -->
        <dt class="col-sm-2">
            Last Updated
        </dt>
        <dd class="col-sm-10">
            @Model.Lastupdated?.ToString("g")
        </dd>

        <!-- Admin ID -->
        <dt class="col-sm-2">
            Admin ID
        </dt>
        <dd class="col-sm-10">
            @Model.Adminid
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.HModificationid" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
