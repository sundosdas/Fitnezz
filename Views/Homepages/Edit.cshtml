@model hmForm

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Edit Homepage</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HModificationid" />
            
            <!-- Slider Title 1 -->
            <div class="form-group">
                <label asp-for="Slidertitle1" class="control-label"></label>
                <input asp-for="Slidertitle1" class="form-control" />
                <span asp-validation-for="Slidertitle1" class="text-danger"></span>
            </div>

            <!-- Slider Subtitle 1 -->
            <div class="form-group">
                <label asp-for="Slidersubtitle1" class="control-label"></label>
                <input asp-for="Slidersubtitle1" class="form-control" />
                <span asp-validation-for="Slidersubtitle1" class="text-danger"></span>
            </div>

            <!-- Existing Slider Image 1 -->
            <div class="form-group">
                <label asp-for="ImageFileS1" class="control-label">Upload New Slider Image 1</label>
                <input asp-for="ImageFileS1" type="file" class="form-control" />
                <span asp-validation-for="ImageFileS1" class="text-danger"></span>
            </div>

            <!-- Slider Title 2 -->
            <div class="form-group">
                <label asp-for="Slidertitle2" class="control-label"></label>
                <input asp-for="Slidertitle2" class="form-control" />
                <span asp-validation-for="Slidertitle2" class="text-danger"></span>
            </div>

            <!-- Slider Subtitle 2 -->
            <div class="form-group">
                <label asp-for="Slidersubtitle2" class="control-label"></label>
                <input asp-for="Slidersubtitle2" class="form-control" />
                <span asp-validation-for="Slidersubtitle2" class="text-danger"></span>
            </div>

            <!-- Existing Slider Image 2 -->
            <div class="form-group">
                <label asp-for="ImageFileS2" class="control-label">Upload New Slider Image 2</label>
                <input asp-for="ImageFileS2" type="file" class="form-control" />
                <span asp-validation-for="ImageFileS2" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
