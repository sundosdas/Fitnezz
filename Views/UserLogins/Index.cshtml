@model IEnumerable<gym.Models.UserLogin>

@{
    ViewData["Title"] = "User Logins";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Create New User Login</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Username)</th>
                <th>@Html.DisplayNameFor(model => model.Pass)</th>
                <th>@Html.DisplayNameFor(model => model.User)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Username)</td>
                    <td>@Html.DisplayFor(modelItem => item.Pass)</td>
                    <td>@Html.DisplayFor(modelItem => item.User.UserId)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.LoginId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.LoginId" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.LoginId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
