@model Aboutuspage

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>About Us Page Details</h1>

<div>
    <h4>About Us Page</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Headertitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Headertitle)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Paragraph1)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paragraph1)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Paragraph2)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paragraph2)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Paragraph3)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paragraph3)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image1)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Image1))
            {
                <img src="@Url.Content(Model.Image1)" alt="Image 1" class="img-fluid" style="max-width: 300px;" />
            }
            else
            {
                <span>No image available</span>
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image2)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Image2))
            {
                <img src="@Url.Content(Model.Image2)" alt="Image 2" class="img-fluid" style="max-width: 300px;" />
            }
            else
            {
                <span>No image available</span>
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lastupdated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lastupdated)
        </dd>

        <dt class="col-sm-2">
            Admin ID
        </dt>
        <dd class="col-sm-10">
            @Model.Admin?.UserId
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.AbModificationid" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
