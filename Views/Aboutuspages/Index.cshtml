@model IEnumerable<Aboutuspage>

@{
    ViewData["Title"] = "Manage About Us Pages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header role="banner" style="margin-block:revert-layer">
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Fitne<span>zz</span></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample05" aria-controls="navbarsExample05" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarsExample05">
                <ul class="navbar-nav mr-auto pl-lg-5 pl-0">
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("MemberView", "Home")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("AboutUs", "Home")">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ContactUs", "Home")">Contact Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "MembershipPlans")">Membership Plans</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Testimonials", "Member")">Testimonials</a>
                    </li>
                </ul>

                <!-- Profile Section -->
                <ul class="navbar-nav ml-auto">
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Manage About Us Content</h1>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Headertitle)</th>
                    <th>@Html.DisplayNameFor(model => model.Paragraph1)</th>
                    <th>Image 1</th>
                    <th>Image 2</th>
                    <th>@Html.DisplayNameFor(model => model.Lastupdated)</th>
                    <th>@Html.DisplayNameFor(model => model.Admin.FirstName)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Headertitle)</td>
                            <td>@Html.DisplayFor(modelItem => item.Paragraph1)</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Image1))
                                {
                                    <img src="@Url.Content( item.Image1)" alt="Image 1" class="img-thumbnail" style="max-width: 100px; height: auto;" />
                                }
                                else
                                {
                                    <span class="text-muted">No Image</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Image2))
                                {
                                    <img src="@Url.Content(item.Image2)" alt="Image 2" class="img-thumbnail" style="max-width: 100px; height: auto;" />
                                }
                                else
                                {
                                    <span class="text-muted">No Image</span>
                                }
                            </td>
                            <td>@item.Lastupdated?.ToString("g")</td>
                            <td>@item.Admin.FirstName</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.AbModificationid" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.AbModificationid" class="btn btn-sm btn-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.AbModificationid" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted">No data available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>